<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= markdown @post.content %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @post.tag_list %>

</p>
<span id="like<%= @post.id %>">
  <%= render partial: 'likes/like', locals: { post: @post, like: @like } %>
</span>




<%= form_for [@post,@post_comment] do |f|%>
            <div class="row">
              <div class="col-sm-12">
                <%= f.text_field :comment, rows:'20' ,cols:'5', class: "form-control",placeholder:"コメントをここに"%>
              </div>
              
            </div>
            <%= f.submit"送信する", class: "btn btn-lg btnbase-1 mt-20 pull-right" %>
<% end %>

<table>
 	<tr>
	 	<th>User名</th>
	 	<th>comment</th>
	</tr>
	<% @comments.each do |c| %>
	<tr>
		<td><%= c.user.name%></td>
		<td><%= c.comment %></td>
	</tr>
	<% end %>
 </table>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
