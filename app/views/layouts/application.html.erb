<!DOCTYPE html>
<html>
  <head>
    <title>Jasmine</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.10/vue.js'></script>  
    <script src='https://cdnjs.cloudflare.com/ajax/libs/marked/0.3.5/marked.js'></script>  
  </head>

  <body>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="">
            <%= link_to " home",posts_path(current_user.id),class: 'glyphicon glyphicon-home' %>
          </li>
          <li class= "">
              <%#= link_to " Users",users_path, class: 'glyphicon glyphicon-user'%>
          </li>
          <li class="">
              <%#= link_to " books",books_path, class: 'glyphicon glyphicon-book'%>
          </li>
          <li class="">
              <%= link_to " logout", destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out'%>
          </li>
        <% else %>
          <li class="">
              <%= link_to " home", posts_path,class: 'glyphicon glyphicon-home'%>
          </li>
          <li class="">
              <%#= link_to " About", new_book_path, class: 'glyphicon glyphicon-link'%>
          </li>
          <li class="">
              <%#= link_to " Sign Up", new_user_registration_path, class: 'glyphicon glyphicon-edit'%>
          </li>
          <li class="">
              <%= link_to " Sign In", new_user_session_path, class: 'glyphicon glyphicon-log-in'%>
          </li>
        <% end %>
      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
