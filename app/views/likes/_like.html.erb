  <% if @post.like_user(current_user.id) %>
    <%= button_to post_likes_path(post_id: post.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("liked.jpg") %>
      
        
      
    <% end %>
    <%= @post.likes_count%>いいね！
